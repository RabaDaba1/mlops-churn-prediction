FROM ghcr.io/astral-sh/uv:0.7.6-python3.11-bookworm-slim

WORKDIR /app

COPY pyproject.toml .
RUN uv sync --no-dev

COPY src/ ./src/

ENV WANDB_PROJECT="customer-churn-prediction"

CMD ["uv", "run", "python", "-m", "kserve", "--model_name", "churn-transformer", "--predictor_host", "churn-predictor-default", "src.transformer.Transformer"]
